{
  "version": 2,
  "name": "pokedex",
  "builds": [
    { "src": "web/package.json", "use": "@now/static-build", "config": { "distDir": "build" } },
    { "src": "api/src/index-now.js", "use": "@now/node" },
    { "src": "api/src/index.js", "use": "@now/node" }
  ],
  "routes": [
    { "src": "/graph", "dest": "api/src/index.js" },
    { "src": "/graphql", "dest": "api/src/index-now.js" },
    {
      "src": "/static/(.*)",
      "headers": { "cache-control": "s-maxage=31536000,immutable" },
      "dest": "web/static/$1"
    },
    { "src": "/favicon.ico", "dest": "web/favicon.ico" },
    { "src": "/asset-manifest.json", "dest": "web/asset-manifest.json" },
    { "src": "/manifest.json", "dest": "web/manifest.json" },
    { "src": "/precache-manifest.(.*)", "dest": "web/precache-manifest.$1" },
    {
      "src": "/service-worker.js",
      "headers": { "cache-control": "s-maxage=0" },
      "dest": "web/service-worker.js"
    },
    { "src": "/(.*)", "headers": { "cache-control": "s-maxage=0" }, "dest": "web/index.html" }
  ]
}
